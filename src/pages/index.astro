---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Experience from "../components/Experience.astro";
import Contact from "../components/Contact.astro";
import "../styles/global.css";
---

<Layout title="Oskar Uddenberg" description="Personal website of Oskar Uddenberg.">
  <Nav />
  <main>
    <Hero />
    <About />
    <Experience />
    <Contact />
  </main>

  <!-- Footer -->
  <footer class="relative z-10 py-8 px-6 bg-[#09090b] border-t border-white/[0.06] text-center">
    <p class="font-mono text-xs text-zinc-600">
      &copy; {new Date().getFullYear()} Oskar Uddenberg
    </p>
  </footer>
</Layout>
