---
const email = "oskar.uddenberg@gmail.com";
const linkedinUrl = "https://www.linkedin.com/in/oskaruddenberg";
---

<section id="contact" class="relative z-10 py-24 px-6 bg-[#09090b] border-t border-white/[0.06]">
  <div class="max-w-4xl mx-auto">
    <div class="grid sm:grid-cols-3 gap-12 items-start">
      <!-- Section label -->
      <div>
        <p class="font-mono text-cyan-400 text-xs uppercase tracking-[0.2em]">
          Contact
        </p>
      </div>

      <!-- Links -->
      <div class="sm:col-span-2">
        <p class="text-zinc-400 text-base leading-relaxed mb-8">
          Feel free to reach out â€” whether it's about a role, a project, or
          just to connect.
        </p>

        <div class="flex flex-col sm:flex-row gap-3">
          <!-- Email -->
          <a
            href={`mailto:${email}`}
            class="inline-flex items-center gap-3 px-5 py-3 rounded-lg border border-white/[0.08] bg-white/[0.02] text-zinc-300 text-sm font-medium hover:border-cyan-400/30 hover:text-cyan-400 transition-colors group"
          >
            <svg
              class="w-4 h-4 text-zinc-600 group-hover:text-cyan-400 transition-colors shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
              ></path>
            </svg>
            {email}
          </a>

          <!-- LinkedIn -->
          <a
            href={linkedinUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-5 py-3 rounded-lg border border-white/[0.08] bg-white/[0.02] text-zinc-300 text-sm font-medium hover:border-cyan-400/30 hover:text-cyan-400 transition-colors group"
          >
            <svg
              class="w-4 h-4 text-zinc-600 group-hover:text-cyan-400 transition-colors shrink-0"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
